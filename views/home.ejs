<script src="/html/js/home.js"></script>
<script type="text/javascript">
    var offset = 0;
    var home = new $.Home();
    $("document").ready(function () {
        home.init({
            tabHot: $('#hot'),
            tabNew: $('#new'),
            tabTop: $('#top'),
            tabDiscuss: $('#discuss')
        });
        home.makeLoadMoreEvent();

    });
